        <Button IsDefault="true"  Name="return" Content="Return" HorizontalAlignment="Left" Margin="589,527,0,0" VerticalAlignment="Top" Width="75" Click="return_Click"/>
        <TextBox Name="messageTextBox" HorizontalAlignment="Left" Height="408" Margin="19,53,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="652" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Visible" IsReadOnly="True" IsUndoEnabled="False"/>
