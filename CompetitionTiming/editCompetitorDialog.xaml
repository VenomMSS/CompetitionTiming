<Window x:Class="CompetitionTiming.editCompetitorDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="editCompetitor" Height="300" Width="300" ContentRendered="Window_ContentRendered" WindowStartupLocation="CenterScreen">
    <Grid Margin="3,0,-3,0">
        <Label Content="Details for competitor" HorizontalAlignment="Left" Margin="20,30,0,0" VerticalAlignment="Top"/>
        <Label Content="Name" HorizontalAlignment="Left" Margin="20,61,0,0" VerticalAlignment="Top"/>
        <Label Content="Motorcycle" HorizontalAlignment="Left" Margin="20,118,0,0" VerticalAlignment="Top"/>
        <TextBox Name="editName" HorizontalAlignment="Left" Height="23" Margin="26,90,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="229"/>
        <TextBox Name="editMotorcycle" HorizontalAlignment="Left" Height="23" Margin="26,144,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="229"/>
        <Button IsDefault="True" Name="acceptButton" Content="Accept" HorizontalAlignment="Left" Margin="37,212,0,0" VerticalAlignment="Top" Width="75" Click="acceptButton_Click"/>
        <Button IsCancel="True" Content="Cancel" HorizontalAlignment="Left" Margin="166,212,0,0" VerticalAlignment="Top" Width="75"/>

    </Grid>
</Window>
