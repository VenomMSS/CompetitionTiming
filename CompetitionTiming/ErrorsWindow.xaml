<Window x:Class="CompetitionTiming.ErrorsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ErrorsWindow" Height="600" Width="700"
        WindowStartupLocation="CenterScreen" >
    <Grid>
        <Label Content="Application errors" HorizontalAlignment="Left" Margin="64,16,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.078,0.498"/>
        <Button Name="clear" Content="Delete" HorizontalAlignment="Left" Margin="27,497,0,0" VerticalAlignment="Top" Width="75" Click="clear_Click"/>
        <Button IsDefault="true" Name="return" Content="Close" HorizontalAlignment="Left" Margin="586,523,0,0" VerticalAlignment="Top" Width="75" Click="return_Click"/>
        <TextBox Name="errorsTextBox" HorizontalAlignment="Left" Height="432" Margin="21,47,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="651" VerticalScrollBarVisibility="Auto" IsReadOnly="True" IsUndoEnabled="False"/>

    </Grid>
</Window>
